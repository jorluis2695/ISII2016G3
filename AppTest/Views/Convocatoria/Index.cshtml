@model IEnumerable<AppTest.Models.Convocatoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterPlantilla.cshtml";
}

<br />
<h2>Lista de Convocatorias</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fecha_inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_fin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_fin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>



@section Widgets{
    <li class="panel">
        <a href="javascript:;" data-parent="#side" data-toggle="collapse" class="accordion-toggle" data-target="#forms">
            <i class="fa fa-edit"></i> Menu de Tests <i class="fa fa-caret-down"></i>
        </a>
        <ul class="collapse nav in" id="forms">
            <li>
                <a href="@Url.Action("Index")">
                    <i class="fa fa-angle-double-right"></i> Lista de Convocatorias
                </a>
            </li>
            <li>
                <a href="@Url.Action("Create")">
                    <i class="fa fa-angle-double-right"></i> Añadir una nueva Convocatoria
                </a>
            </li>
        </ul>
    </li>
}
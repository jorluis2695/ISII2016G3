                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" name="usuario" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Recuérdame
                                </label>
                            </div>
                            <br>
                            <input type="submit" href="" value="Iniciar Sesión" class="btn btn-lg btn-green btn-block">
                        </fieldset>
                        <br>
                        <p class="small">
                            <a href="#">Olvidaste tu contraseña?</a>
                        </p>
                    </form>
                    
                </div>

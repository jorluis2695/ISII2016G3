
@{
    ViewBag.Title = "aprobacionAptitudes";
    Layout = "~/Views/Shared/_MasterPlantilla.cshtml";
}

<br />

<h2>Reporte de Aprobación - Examen de Aptitudes</h2>
<br />
<br />

<div class="col-lg-6">
    <div class="portlet portlet-orange">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h4>Indice de Aprobación</h4>
            </div>
            <div class="portlet-widgets">
                <a onclick="cargarDatos();"><i class="fa fa-refresh"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>
        
            <div class="portlet-body">
                <div class="flot-chart">
                    <div class="flot-chart-content" id="flot-chart-pie"></div>
                </div>
            
        </div>
    </div>
</div>

<script>
    $(function cargarDatos() {

        var data = [
            { label: "Aprobados", data: 132 },
            { label: "Reprobados", data: 91 },
        ];

        var plotObj = $.plot($("#flot-chart-pie"), data, {
            series: {
                pie: {
                    show: true
                }
            },
            grid: {
                hoverable: true
            },
            tooltip: true,
            tooltipOpts: {
                content: "%p.0%, %s", // show percentages, rounding to 2 decimal places
                shifts: {
                    x: 20,
                    y: 0
                },
                defaultTheme: false
            }
        });

    });
</script>

<script src="~/Scripts/plugins/flot/jquery.flot.js"></script>
<script src="~/Scripts/plugins/flot/jquery.flot.tooltip.min.js"></script>
<script src="~/Scripts/plugins/flot/jquery.flot.resize.js"></script>
<script src="~/Scripts/plugins/flot/jquery.flot.pie.js"></script>

